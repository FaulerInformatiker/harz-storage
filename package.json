{
  "name": "harz-storage",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:security": "eslint . --ext .js,.jsx,.ts,.tsx --config .eslintrc.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:zap": "npm run dev & sleep 10 && docker run -v $(pwd):/zap/wrk/:rw -t ghcr.io/zaproxy/zaproxy:stable zap-baseline.py -t http://host.docker.internal:3000 -r zap-report.html -x zap-report.xml",
    "test:zap:full": "npm run dev & sleep 10 && docker run -v $(pwd):/zap/wrk/:rw -t ghcr.io/zaproxy/zaproxy:stable zap-full-scan.py -t http://host.docker.internal:3000 -r zap-full-report.html -x zap-full-report.xml",
    "mock-api": "json-server --watch mock-api/db.json --port 3001",
    "dev:full": "concurrently \"npm run mock-api\" \"npm run dev\"",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "audit:ci": "audit-ci --config audit-ci.json",
    "security:check": "npm run audit && npm run lint:security",
    "security:full": "npm run audit:ci && npm run lint:security && npm test",
    "security:zap": "npm run test:zap",
    "security:docker": "./scripts/security-scan.sh",
    "security:complete": "npm run security:full && npm run security:docker",
    "release:patch": "npm version patch",
    "release:minor": "npm version minor",
    "release:major": "npm version major"
  },
  "dependencies": {
    "lucide-react": "^0.292.0",
    "next": "^14.2.33",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "audit-ci": "^7.1.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.15",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.0.0",
    "json-server": "^1.0.0-beta.3",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5"
  }
}
