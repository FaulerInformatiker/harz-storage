{
  "name": "harz-storage",
  "version": "0.1.4",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:security": "eslint . --ext .js,.jsx,.ts,.tsx --config .eslintrc.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:contract": "vitest run tests/contract",
    "test:contract:publish": "pact-broker publish pacts --consumer-app-version=$npm_package_version --broker-base-url=$PACT_BROKER_BASE_URL",
    "test:lighthouse": "lhci autorun",
    "test:zap": "npm run dev & sleep 10 && docker run -v $(pwd):/zap/wrk/:rw -t ghcr.io/zaproxy/zaproxy:stable zap-baseline.py -t http://host.docker.internal:3000 -r zap-report.html -x zap-report.xml",
    "test:zap:full": "npm run dev & sleep 10 && docker run -v $(pwd):/zap/wrk/:rw -t ghcr.io/zaproxy/zaproxy:stable zap-full-scan.py -t http://host.docker.internal:3000 -r zap-full-report.html -x zap-full-report.xml",
    "mock-api": "json-server --watch mock-api/db.json --port 3001",
    "mock-api:setup": "cp mock-api/db.template.json mock-api/db.json",
    "dev:full": "concurrently \"npm run mock-api\" \"npm run dev\"",
    "analyze": "ANALYZE=true npm run build",
    "analyze:server": "BUNDLE_ANALYZE=server npm run build",
    "analyze:browser": "BUNDLE_ANALYZE=browser npm run build",
    "size": "size-limit",
    "size:why": "size-limit --why",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "audit:ci": "audit-ci --config audit-ci.json",
    "security:check": "npm run audit && npm run lint:security",
    "security:full": "npm run audit:ci && npm run lint:security && npm test",
    "security:zap": "npm run test:zap",
    "security:docker": "./scripts/security-scan.sh",
    "security:complete": "npm run security:full && npm run security:docker",
    "license:check": "node scripts/check-licenses.js",
    "sbom:generate": "cyclonedx-npm --output-file sbom.json && cyclonedx-npm --output-format xml --output-file sbom.xml",
    "changelog:generate": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release:patch": "npm version patch",
    "release:minor": "npm version minor",
    "release:major": "npm version major",
    "prepare": "husky"
  },
  "dependencies": {
    "@napi-rs/wasm-runtime": "^1.0.6",
    "lucide-react": "^0.546.0",
    "next": "^15.5.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@cyclonedx/cyclonedx-npm": "^4.0.3",
    "@eslint/eslintrc": "^3.3.1",
    "@lhci/cli": "^0.15.1",
    "@next/bundle-analyzer": "^15.5.4",
    "@pact-foundation/pact": "^16.0.0",
    "@playwright/test": "^1.40.0",
    "@tailwindcss/postcss": "^4.1.14",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "audit-ci": "^7.1.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.33",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "json-server": "^1.0.0-beta.3",
    "postcss": "^8.5.6",
    "size-limit": "^11.1.6",
    "tailwindcss": "^4.1.14",
    "typescript": "^5",
    "undici": "^7.16.0",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "@conventional-changelog/git-client": ">=2.0.0"
    }
  }
}
