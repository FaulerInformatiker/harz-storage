#!/usr/bin/env sh

echo "🔍 Running TypeScript type checking..."
npx tsc --noEmit

echo "🔧 Running ESLint..."
npm run lint

echo "🧪 Running tests before push..."
npm test

echo "📊 Validating test coverage..."
npm run test:coverage

echo "📋 Running contract tests..."
npm run test:contract

echo "🎭 Running E2E tests..."
npm run test:e2e
