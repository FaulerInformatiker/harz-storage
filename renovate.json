{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "repositories": ["FaulerInformatiker/harz-storage"],
  "schedule": ["before 6am on monday"],
  "timezone": "Europe/Berlin",
  "labels": ["dependencies"],
  "assignees": ["@me"],
  "packageRules": [
    {
      "matchPackagePatterns": ["^@types/"],
      "groupName": "TypeScript definitions",
      "schedule": ["before 6am on monday"]
    },
    {
      "matchPackagePatterns": ["^eslint", "^@typescript-eslint/"],
      "groupName": "ESLint packages",
      "schedule": ["before 6am on monday"]
    },
    {
      "matchPackagePatterns": ["^@playwright/", "^playwright"],
      "groupName": "Playwright packages",
      "schedule": ["before 6am on monday"]
    },
    {
      "matchPackagePatterns": ["^jest", "^@jest/", "^@testing-library/"],
      "groupName": "Testing packages",
      "schedule": ["before 6am on monday"]
    },
    {
      "matchPackageNames": ["next", "react", "react-dom"],
      "groupName": "React ecosystem",
      "schedule": ["before 6am on monday"]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on monday"]
  },
  "automerge": false,
  "platformAutomerge": false
}
