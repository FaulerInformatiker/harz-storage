{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "autodiscover": true,
  "timezone": "Europe/Berlin",
  "labels": [
    "dependencies"
  ],
  "assignees": [
    "@me"
  ],
  "packageRules": [
    {
      "groupName": "TypeScript definitions",
      "matchPackageNames": [
        "/^@types//"
      ]
    },
    {
      "groupName": "ESLint packages",
      "matchPackageNames": [
        "/^eslint/",
        "/^@typescript-eslint//"
      ]
    },
    {
      "groupName": "Playwright packages",
      "matchPackageNames": [
        "/^@playwright//",
        "/^playwright/"
      ]
    },
    {
      "groupName": "Testing packages",
      "matchPackageNames": [
        "/^jest/",
        "/^@jest//",
        "/^@testing-library//"
      ]
    },
    {
      "matchPackageNames": [
        "next",
        "react",
        "react-dom"
      ],
      "groupName": "React ecosystem"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true
  },
  "automerge": true,
  "platformAutomerge": true
}
